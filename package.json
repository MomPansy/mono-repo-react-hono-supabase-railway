{
  "private": true,
  "name": "mono-repo-node-template",
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@10.7.0",
  "scripts": {
    "envx": "dotenvx",
    "envx:run": "pnpm envx run --env-file .env --env-file .env.development --overload",
    "dev:server": "pnpm envx:run -- tsx watch --tsconfig tsconfig.node.json server/index.ts",
    "dev:app": "wait-on http://127.0.0.1:3000/healthz && vite",
    "dev": "pnpm run --stream /dev:.*/",
    "build:typecheck": "tsc --build",
    "build:server": "tsx --tsconfig tsconfig.node.json scripts/build-server.ts",
    "build:app": "vite build",
    "build": "pnpm run build:typecheck && rimraf dist && pnpm run build:server && pnpm run build:app",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "start": "pnpm envx:run -- node dist/index.js"
  },
  "dependencies": {
